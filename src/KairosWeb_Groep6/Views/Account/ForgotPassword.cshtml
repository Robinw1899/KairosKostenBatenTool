@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Wachtwoord vergeten?";
}

<div class="row">
    <div class="box-login">
        <h2>@ViewData["Title"]</h2>
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
            <h4>Vul je emailadres in.</h4>
            <h6 id="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row form-group required">
                <div class="col-md-12">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <!--<span asp-validation-for="Email" class="text-danger"></span>-->
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 text-right">
                    <a class="btn btn-default">Annuleer</a>
                </div>
                <div class="col-md-4 text-right">
                    <button type="submit" class="btn btn-info">Reset wachtwoord</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
    <style>
        .body-content {
            background: none;
        }
        .box-login {
            width: 50%;
            max-width: 50%;
        }
    </style>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
    <script>
        var body = document.getElementsByTagName("body")[0];
        body.style.backgroundImage = "url(/images/aanmelden_bg.jpg)";
    </script>
}
