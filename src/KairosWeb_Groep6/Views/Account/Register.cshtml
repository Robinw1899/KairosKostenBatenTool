@model RegisterViewModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="box-login center-block">
    <!--LOGIN FORM-->
    <div class="thumbnail">
        <img src="/images/logo's/kairos_icon_green.png" alt="Logo Kairos" />
    </div>

    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <h2 class="">@ViewData["Title"]</h2>
        <div class="">
            <h6 id ="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>
            <div asp-validation-summary="All" class="text-danger"></div>
            <h4>Informatie jobcoach</h4>
            <hr />
            
            <div class="row form-group required">
                <div class="col-md-6">
                    <label asp-for="Naam" class="control-label"></label>
                    <input asp-for="Naam" class="form-control" />
                </div>
                <div class="col-md-6 beschrijving">
                    <label asp-for="Voornaam" class="control-label"></label>
                    <input asp-for="Voornaam" class="form-control" />
                </div>
            </div>
            
            <div class="row form-group required">
                <div class="col-md-12">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>

            <h4>Informatie organisatie</h4>
            <hr />
            <p>Je kan je adres automatisch aanvullen door de straatnaam te typen in het tekstveld "Straat". 
                Hierdoor krijg je suggesties onder het tekstveld.</p>

            <div class="row form-group required">
                <div class="col-md-12">
                    <label asp-for="OrganisatieNaam" class="control-label"></label>
                    <input asp-for="OrganisatieNaam" class="form-control" />
                </div>
            </div>
            
            <div class="row form-group ">
                <div class="col-md-8 required">
                    <label asp-for="StraatOrganisatie" class="control-label"></label>
                    <input asp-for="StraatOrganisatie" class="form-control" onfocus="geolocate()" id="route"/>
                </div>
                <div class="col-md-2 required beschrijving">
                    <label asp-for="NrOrganisatie" class="control-label"></label>
                    <input asp-for="NrOrganisatie" class="form-control" id="street_number"/>
                </div>
                <div class="col-md-2 beschrijving">
                    <label asp-for="Bus" class="control-label"></label>
                    <input asp-for="Bus" class="form-control" />
                </div>
            </div>
            
            <div class="row form-group required">
                <div class="col-md-3">
                    <label asp-for="Postcode" class="control-label"></label>
                    <input asp-for="Postcode" class="form-control" id="postal_code"/>
                </div>
                <div class="col-md-9 beschrijving">
                    <label asp-for="Gemeente" class="control-label"></label>
                    <input asp-for="Gemeente" class="form-control" id="locality"/>                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 text-right">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-default" style="margin-right: 15px;">Annuleer</a>
                    <button type="submit" class="btn btn-info">@ViewData["Title"]</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
    <style>
        .body-content {
            background: none;
        }
        .box-login {
            width: 60%;
            max-width:60%;
        }
    </style>
}

@section Scripts {
    <script>
        var body = document.getElementsByTagName("body")[0];
        body.style.backgroundImage = "url(/images/aanmelden_bg.jpg)";
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0YY1oWU_ag0hCNWp-Tzn36DoEWVNJz-s&libraries=places&callback=initAutocomplete"
        async defer></script>
    
    <script src="/js/maps.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}