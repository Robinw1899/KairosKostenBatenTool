@{
    ViewData["title"] = "Bevestig het archiveren";
}

<div class="row">
    <div class="col-md-12">
        <h3>@ViewData["title"]</h3>
        <br />

        @if (ViewData["werkgever"] != null)
        {
            <p>Ben je zeker dat je de analyse van @ViewData["werkgever"] wil archiveren</p>
        }
        else
        {
            <p>Ben je zeker dat je deze analyse wil archiveren?</p>
        }

        <form asp-action="Archiveer" asp-route-id="@ViewData["analyseId"]" method="post">
            <div class="form-group">
                <input class="btn btn-info col-md-1" type="submit" value="Ja" style="margin-right: 20px;" />
                <a class="btn btn-default col-md-1" asp-action="Index" asp-controller="Kairos">
                    Nee
                </a>
            </div>
        </form>
    </div>
</div>