@model KairosWeb_Groep6.Models.KairosViewModels.Baten.BatenIndexViewModel
@{
    ViewData["title"] = "Baten";
}

<div>
    @Html.Partial("_Tabs")
</div>

<div class="page-header">
    <h3>@ViewData["title"]</h3>
</div>

<div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@Model.AantalIngevuld"
         aria-valuemin="0" aria-valuemax="@Model.AantalBaten" 
         style="width:@(Math.Round((((double) Model.AantalIngevuld / (double) Model.AantalBaten) * 100) / 2, 0))%">
    </div>
</div>

<p class="text-center">@Model.AantalIngevuld van de @Model.AantalBaten baten ingevuld.</p>

<p>
    Kies een baat uit onderstaande lijst.
    Beweeg met de muis over de baat om meer info te krijgen.
</p>
<div class="row col-md-offset-1">
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a asp-controller="Baten" asp-action="MedewerkerZelfdeNiveau"
               data-toggle="tooltip" data-placement="bottom"
               title="Zullen er (deels) medewerkers op hetzelfde niveau als de nieuwe medewerker vervangen worden?">
                @if (Model.MedewerkersZelfdeNiveauBaatIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Medewerkers op zelfde niveau vervangen
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="MedewerkerHogerNiveau"
               data-toggle="tooltip" data-placement="bottom"
               title="Zullen er (deels) medewerkers op een hoger niveau als de nieuwe medewerker vervangen worden?">
                @if (Model.MedewerkersHogerNiveauBaatIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Medewerkers op hoger niveau vervangen
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="UitzendKrachtBesparingen"
               data-toggle="tooltip" data-placement="bottom"
               title="Welke besparing denkt de werkgever jaarlijks te kunnen maken op uitzendkrachten?">
                @if (Model.UitzendKrachtBesparingenIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Besparingen op uitzendkrachten
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="ExtraOmzet"
               data-toggle="tooltip" data-placement="bottom"
               title="Mist de werkgever vandaag omzet doordat hij personeel tekort komt?
               Hoeveel meer omzet denkt de werkgever jaarlijks te kunnen realiseren door inzet van mensen met een grote afstand tot de arbeidsmarkt?">
                @if (Model.ExtraOmzetIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Extra omzet
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="ExtraProductiviteit"
               data-toggle="tooltip" data-placement="bottom"
               title="Hoeveel extra productiviteit denkt de werkgever jaarlijks
               te kunnen maken door inzet van mensen met een grote afstand tot de arbeidsmarkt?">
                @if (Model.ExtraProductiviteitIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Extra productiviteit
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="OverurenBesparingen"
               data-toggle="tooltip" data-placement="bottom"
               title="Hoeveel denkt de werkgever jaarlijks te kunnen besparen op overuren door inzet van mensen met een grote afstand tot de arbeidsmarkt?">
                @if (Model.OverurenBesparingIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Besparingen op overuren
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="ExterneInkopen"
               data-toggle="tooltip" data-placement="bottom"
               title="Welke zaken koopt de werkgever vandaag extern in?
               Hoeveel betaalt de werkgever vandaag jaarlijks aan het uitbesteden van werk?
               Wat zijn de transportkosten van eventueel uitbesteedde zaken?
               Wat zijn de logistieke handlingskosten van eventueel uitbesteedde zaken?
               Hoeveel denkt de werkgever te kunnen besparen?">
                @if (Model.ExterneInkopenIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Externe inkopen, transportskosten en logistieke handlingskosten
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="Subsidies"
               data-toggle="tooltip" data-placement="bottom"
               title="Welk bedrag krijgt de werkgever aan subsidie voor eventuele aanpassingen aan de werkomgeving?">
                @if (Model.SubsidieIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Subsidie
            </a>
        </li>
        <li>
            <a asp-controller="Baten" asp-action="ExtraBesparingen"
               data-toggle="tooltip" data-placement="bottom"
               title="Aan welke besparingen kan er nog meer gedacht worden?">
                @if (Model.ExtraBesparingenIngevuld)
                {
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                } Extra besparingen
            </a>
        </li>
    </ul>
</div>
<div class="row" style="margin-top:20px">
    <div class="col-xs-10 .col-md-10">
        <a asp-controller="Kosten" asp-action="Index" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Kosten</a>
    </div>
    <div class="col-xs-2 .col-md-2 text-right">
        <a asp-controller="Resultaat" asp-action="Index" style="margin-left:15px" class="btn btn-success">
        Resultaat <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });

        $("#baten").addClass("active");
    </script>
}