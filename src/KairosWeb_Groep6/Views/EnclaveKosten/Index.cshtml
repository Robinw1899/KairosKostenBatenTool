@using System.Collections.Generic
@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@using KairosWeb_Groep6.Models.KairosViewModels.Kosten
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<EnclaveKostViewModel>
@{
    ViewData["Title"] = Soort.EnclaveKost.GeefOmschrijving();    
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p class="beschrijving">
        @Soort.EnclaveKost.GeefVraag()
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" asp-action="VoegToe" id="add"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    <div id="divForm">
        
    </div>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-8 col-md-8">
        <a asp-controller="Kosten" asp-action="Loonkosten" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Vorige
        </a>
    </div>
    <div class="col-xs-4 col-md-4 text-right">
        <a asp-controller="Kosten" asp-action="VoorbereidingsKosten" class="btn btn-default">
            Volgende <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        siteView.initFunctionsKostenEnBaten();
        $("#kosten").addClass("active");
    </script>
    
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
