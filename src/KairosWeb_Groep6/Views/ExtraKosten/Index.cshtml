@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model IEnumerable<KairosWeb_Groep6.Models.KairosViewModels.Kosten.ExtraKostViewModel>
@{
    ViewData["Title"] = Soort.ExtraKost.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.ExtraKost.GeefVraag()
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" id="add" asp-action="VoegToe"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>
    
    <div id="divForm">
        
    </div>
    
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-10 col-md-10">
        <a asp-controller="Kosten" asp-action="BegeleidingsKosten" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Kosten voor administratie en interne begeleiding
        </a>
    </div>
    <div class="col-xs-2 col-md-2 text-right">
        <a asp-controller="Baten" asp-action="Index" style="margin-right: 30px" class="btn btn-info">
            Baten <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        siteView.initFunctionsKostenEnBaten();

        $("#kosten").addClass("active");
    </script>
}