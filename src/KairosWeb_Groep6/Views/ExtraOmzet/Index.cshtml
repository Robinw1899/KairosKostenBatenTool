@model KairosWeb_Groep6.Models.KairosViewModels.Baten.ExtraOmzetViewModel
@{
    ViewData["Title"] = "Extra omzet";
}

<div class="container">
    <div>
        @Html.Partial("_Tabs")
    </div>
  
    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        Mist de werkgever vandaag omzet doordat hij personeel tekort komt?
        Hoeveel meer omzet denkt de werkgever jaarlijks te kunnen realiseren door inzet van
        mensen met een grote afstand tot de arbeidsmarkt?
    </p>

    <form asp-controller="ExtraOmzet" asp-action="Opslaan" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id"/>
        <input asp-for="Soort"/>
        <input asp-for="Type"/>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="JaarbedragOmzetverlies"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input asp-for="JaarbedragOmzetverlies" class="form-control input-maxwidth" id="jaarbedrag" placeholder="Jaarbedrag omzetverlies"/>
                </div>
                <span asp-validation-for="JaarbedragOmzetverlies" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Besparing"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Besparing" class="form-control input-maxwidth" id="besparing" placeholder="% besparing"/>
                </div>
                <span asp-validation-for="Besparing" class="text-danger"></span>
            </div>
            
            <div class="col-md-4">
                <label asp-for="Bedrag"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input type="text" class="form-control input-maxwidth" disabled="disabled" value="@(Model.Bedrag.ToString("C"))"/>
                </div>
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>
        </div>

        <br />

        <!--buttons add-->
        <div class="row">
            <div class="col-md-7 text-right">
                <a asp-controller="Baten" asp-action="Index" class="btn btn-default" id="closeForm">Annuleer</a>
                <button type="submit" class="btn btn-info" style="margin-left: 15px">Opslaan</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-xs-10 col-md-9">
        <a asp-controller="Baten" asp-action="UitzendKrachtBesparingen" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Uitzendkracht besparingen
        </a>
    </div>
    <div class="col-xs-2 col-md-3 text-right">
        <a asp-controller="Baten" asp-action="ExtraProductiviteit" class="btn btn-success">
            Extra productiviteit <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section Scripts{
    <script>
        if (@Model.JaarbedragOmzetverlies > 0) {
            siteView.toonFormulier();
        } else {
            $("#jaarbedrag").val("");
            $("#besparing").val("");
        }

        $("#baten").addClass("active");

    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}