@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model KairosWeb_Groep6.Models.KairosViewModels.Baten.ExtraProductiviteitViewModel
@{
    ViewData["Title"] = Soort.ExtraProductiviteit.GeefOmschrijving();
}

<div class="container">
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.ExtraProductiviteit.GeefVraag()
    </p>

    <div id="divForm">
        @Html.Partial("_Formulier", Model)
    </div>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-9 col-md-9">
        <a asp-controller="Baten" asp-action="ExtraOmzet" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Extra omzet
        </a>
    </div>
    <div class="col-xs-3 col-md-3 text-right">
        <a asp-controller="Baten" asp-action="OverurenBesparingen" style="margin-right: 15px" class="btn btn-info">
            Overuren besparingen <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section Scripts{
    <script>
        $("#baten").addClass("active");
    </script>
}