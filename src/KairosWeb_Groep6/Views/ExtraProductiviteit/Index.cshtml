@model KairosWeb_Groep6.Models.KairosViewModels.Baten.ExtraProductiviteitViewModel
@{
    ViewData["Title"] = "Extra productiviteit";
}

<div class="container">
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        Hoeveel extra productiviteit denkt de werkgever jaarlijks te kunnen maken door inzet van mensen
        met een grote afstand tot de arbeidsmarkt?
    </p>

    <form asp-action="Opslaan" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id"/>
        <input asp-for="Soort"/>
        <input asp-for="Type"/>

        <div class="row col-md-offset-2">
            <div class="col-md-4">
                <label asp-for="Bedrag"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Bedrag" class="form-control" id="jaarbedrag" placeholder="Jaarbedrag"/>
                </div>
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>
        </div>

        <br/>

        <!--buttons an/add-->
        <div class="row col-md-offset-2">
            <div class="col-md-4 text-right">
                <a asp-controller="Baten" asp-action="Index" class="btn btn-default" id="closeForm">Annuleer</a>
                <button type="submit" class="btn btn-info" style="margin-left: 15px">Opslaan</button>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-xs-9 .col-md-9">
        <a asp-controller="Baten" asp-action="ExtraOmzet" style="margin-left: 15px" class="btn btn-default">❮ Extra omzet </a>
    </div>
    <div class="col-xs-3 .col-md-3">
        <a asp-controller="Baten" asp-action="OverurenBesparingen" style="margin-left: 15px" class="btn btn-success">Overuren besparingen ❯</a>
    </div>
</div>

@section Scripts{
    <script>
        if (@Model.Bedrag > 0) {
            siteView.toonFormulier();
        } else {
            $("#jaarbedrag").val("");
        }

        $("#baten").addClass("active");

    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}