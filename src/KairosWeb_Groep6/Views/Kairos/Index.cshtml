@model KairosWeb_Groep6.Models.KairosViewModels.IndexViewModel
@{
    ViewData["title"] = ViewData["zoeken"] == null? "Home" : "Zoekresultaten";
    var klasse = ViewData["zoeken"] == null ? "col-md-11" : "col-md-8";
}
<div>
    <div class="page-header" style="overflow: auto;">
        <!--Overflow omdat anders de border boven de h3 en knop staat-->
        <div class="col-md-5">
            <h3>@ViewData["title"]</h3>
        </div>
        <div class="col-md-7" style="margin-top: 20px;">
            @if (ViewData["zoeken"] != null)
            {// als we gezocht hebben knop tonen
                <div class="col-md-2">
                    <a class="btn btn-default" asp-action="Index" asp-controller="Kairos">Toon alles</a>
                </div>
            }
            
            <div class="@klasse">
                <!--margin omdat de h3 dezelfde margin heeft-->
                <form asp-action="Zoek" method="post" id="zoekterm">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Zoek analyses"  name="zoekterm">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">Zoek</button>
                        </span>
                    </div>
                </form>
            </div>

            <div class="col-md-1">                   
                <a class="btn btn-info" id="toggleGrid"><i class="fa fa-th-large" id="toggle" aria-hidden="true"></i></a> 
                <a class="btn btn-info" id="toggleList"><i class="fa fa-list-ul" id="toggle" aria-hidden="true"></i></a> 
            </div>
        </div>
    </div>
    
    <div>
        <img src="/images/loader.gif" alt="Laad-icoon analyses" id="loader" />
    </div>

   
        <div class="row">
            <div class="col-md-12" id="analyses" data-href="@Url.Action("HaalAnalysesOpZonderModel", "Kairos", new
                                                                    {
                                                                        beginIndex = Model.BeginIndex,
                                                                        eindIndex = Model.EindIndex
                                                                    })">
            </div>
        </div>
  
</div>

@section Scripts{
    <script>
        $("#toggleList").click(function() {
            $("#toggleList").toggle();
            $("#toggleGrid").toggle();
            $(".card_wrapper").removeClass("col-sm-12 col-md-6 col-lg-4").addClass("col-sm-12 col-md-12 col-lg-12");
        });

        $("#toggleGrid").click(function() {
            $("#toggleList").toggle();
            $("#toggleGrid").toggle();
            $(".card_wrapper").removeClass("col-sm-12 col-md-12 col-lg-12").addClass("col-sm-12 col-md-6 col-lg-4");
        });

        $(document).ready(function () {
            $("#toggleGrid").toggle();          
            if (siteView) {
                siteView.laadAnalyses();
            }
        });

        $("#zoekterm").submit(function (event) {           
            event.preventDefault();
            $.post(this.action,$(this).serialize(),
                function (data) {
                    $("#analyses").html(data);
                    $("#loader").slideUp(500);
                });
           
        });


      
    </script>
}
