@model KairosWeb_Groep6.Models.KairosViewModels.MedeWerkerNiveauBaatViewModel
@{
    ViewData["Title"] = "Medewerker hoger niveau vervangen";
}

<h2 class="col-md-offset-1 ">@ViewData["Title"]</h2>

<ul id="icons-h4">
    <a asp-action="opslaan"><i class="fa fa-floppy-o"></i></a>
    <a asp-action="bewerken"><i class="fa fa-pencil"></i></a>
</ul>

<!--Controller en actie nog veranderen-->
<form asp-controller="Kairos" asp-action="NieuweAnalyse" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div class="col-md-offset-1">

        <hr />
        <!--Tabs-->
        <div>
            <ul class="nav nav-tabs tabsWerkgeverKostenBatenResultaat">
                <li><a href="#">Werkgever</a></li>
                <li><a href="#">Kosten</a></li>
                <li class="active"><a href="#">Baten</a></li>
                <li><a href="#">Resultaat</a></li>
            </ul>
        </div>
        <!--einde tabs-->
        
        <div>
            <div id="tabel">
                <!--Tabel-->
                @Html.Partial("_TabelMedewerkerNiveauBaat", Model);
                <!--einde tabel-->
            </div>
            <!--buttons - + -->
            <div class="form-group buttonsMinPlus">
                <button><li class="fa fa-minus-square"></li></button>
                <button id="btnPlus"><li class="fa fa-plus-square"></li></button>
            </div>
            <!--einde buttons - + -->
        </div>
        <!--begin div inputForm-->
        <div id="inputForm">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uren" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Uren" class="form-control" />
                    <span asp-validation-for="Uren" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BrutoMaandloonFulltime" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="BrutoMaandloonFulltime" class="form-control" />
                    <span asp-validation-for="BrutoMaandloonFulltime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Bedrag" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Bedrag" class="form-control" />
                    <span asp-validation-for="Bedrag" class="text-danger"></span>
                </div>
            </div>
            <!--buttons an/add-->
            <div class="col-md-12">
                <div class="form-group col-md-12">
                    <div class="col-md-offset-3 col-md-8 text-right">
                        <div>
                            <a asp-action="Index" class="btn btn-default">Annuleer</a>
                            <button class="btn btn-primary" type="submit">Voeg toe</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--Einde div inputForm-->
    </div>
</form>