@model KairosWeb_Groep6.Models.KairosViewModels.NieuweWerkgeverViewModel
@{
    ViewData["Title"] = "Werkgever aanmaken";
}

<h2 class="col-md-offset-1">@ViewData["Title"]</h2>

<form asp-controller="Kairos" asp-action="NieuweWerkgever" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <div class="col-md-offset-1">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h3>Contactpersoon</h3>
        <hr />
        <div class="form-group">
            <label asp-for="Naam" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Voornaam" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NaamAfdeling" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="NaamAfdeling" class="form-control" />
                <span asp-validation-for="NaamAfdeling" class="text-danger"></span>
            </div>
        </div>

        <h3>Bedrijf</h3>
        <hr />
        <div class="form-group">
            <label asp-for="OrganisatieNaam" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="OrganisatieNaam" class="form-control" />
                <span asp-validation-for="OrganisatieNaam" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StraatOrganisatie" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="StraatOrganisatie" class="form-control" />
                <span asp-validation-for="StraatOrganisatie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NrOrganisatie" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="NrOrganisatie" class="form-control" />
                <span asp-validation-for="NrOrganisatie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Postcode" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gemeente" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Gemeente" class="form-control" />
                <span asp-validation-for="Gemeente" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="GemiddeldAantalWerkUrenPerWeek" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="GemiddeldAantalWerkUrenPerWeek" class="form-control" />
                <span asp-validation-for="GemiddeldAantalWerkUrenPerWeek" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PatronaleBijdrage" class="col-md-offset-2 col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="PatronaleBijdrage" class="form-control" />
                <span asp-validation-for="PatronaleBijdrage" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group col-md-12">
                <div class="col-md-offset-3 col-md-5 text-right">
                    <div>
                        <a asp-action="Index" class="btn btn-default">Annuleer</a>
                        <button class="btn btn-primary" type="submit">Toevoegen</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>