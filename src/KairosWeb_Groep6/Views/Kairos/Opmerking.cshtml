@model KairosWeb_Groep6.Models.KairosViewModels.OpmerkingViewModel

@{
    ViewData["title"] = "Contact opnemen met een administrator";
}
<div>
    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>Vul een onderwerp en bericht in.</p>

    <form asp-controller="Kairos" asp-action="Opmerking" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="formOpmerking form-horizontal">
        
        <h6 id="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>
        
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Onderwerp" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Onderwerp" class="form-control" placeholder="Onderwerp opmerking" />
                <!--<span asp-validation-for="Onderwerp" class="text-danger"></span>-->
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Bericht" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <textarea asp-for="Bericht" class="form-control" placeholder="Typ je bericht hier..."></textarea>
                <!--<span asp-validation-for="Bericht" class="text-danger"></span>-->
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group col-md-12">
                <div class="col-md-offset-3 col-md-8 text-right">
                    <div>
                        <a asp-action="Index" class="btn btn-default">Annuleer</a>
                        <button class="btn btn-primary" type="submit" style="margin-left: 15px;">Verzenden</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles{
    <style>
        /* Klein beetje opmaak voor dit formulier */
        textarea#Bericht {
            /*Opmerking form*/
            width: 600px;
            height: 300px;
            max-width: none;
        }

        input#Onderwerp {
            /*Opmerking form*/
            width: 600px;
            max-width: none;
        }
    </style>
}