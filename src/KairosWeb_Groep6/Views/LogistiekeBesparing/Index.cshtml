@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model KairosWeb_Groep6.Models.KairosViewModels.Baten.LogistiekeBesparingViewModel
@{
    ViewData["title"] = Soort.LogistiekeBesparing.GeefOmschrijving();
}

<div class="container">
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.LogistiekeBesparing.GeefVraag()
    </p>

    <div id="divForm">
        @Html.Partial("_Formulier", Model)
    </div>
</div>

<div class="row">
    <div class="col-xs-9 col-md-9" id="btnVorigeLogistiekeBesparing">
        <a asp-controller="Baten" asp-action="Subsidie" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Vorige
        </a>
    </div>
    <div class="col-xs-3 col-md-3 text-right" id="btnVolgendeLogistiekeBesparing">
        <a asp-controller="Baten" asp-action="ExtraBesparingen" class="btn btn-default">
            Volgende <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section Scripts{
    <script>
        $("#baten").addClass("active");
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
