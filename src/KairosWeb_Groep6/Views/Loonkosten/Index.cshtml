@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model IEnumerable<KairosWeb_Groep6.Models.KairosViewModels.Kosten.LoonkostViewModel>
@{
    ViewData["title"] = Soort.Loonkost.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.Loonkost.GeefVraag()
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" id="add" asp-action="VoegToe"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    <div id="divForm">
        
    </div>
</div>

<div class="row">
    <div class="col-xs-3 col-md-4">
        <a asp-controller="Kosten" asp-action="Index" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Kosten
        </a>
    </div>
    <div class="col-xs-9 col-md-8 text-right">
        <a asp-controller="Kosten" asp-action="EnclaveKosten" style="margin-left: 30px" class="btn btn-info">
            Kosten voor maatwerkbedrijf of enclave of onderaanneming <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        siteView.initFunctionsKostenEnBaten();
        $("#kosten").addClass("active");
    </script>
    
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}