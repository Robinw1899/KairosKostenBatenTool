@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model IEnumerable<KairosWeb_Groep6.Models.KairosViewModels.Baten.MedewerkerNiveauBaatViewModel>
@{
    ViewData["title"] = Soort.MedewerkersZelfdeNiveau.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.MedewerkersZelfdeNiveau.GeefVraag()
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" id="add" asp-action="VoegToe"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    <div id="divForm">
        
    </div>
</div>

<div class="row"style="margin-top:20px">
    <div class="col-xs-7 col-md-8">
        <a asp-controller="Baten" asp-action="Index" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Baten
        </a>
    </div>
    <div class="col-xs-5 col-md-4 text-right">
        <a asp-controller="Baten" asp-action="MedewerkerHogerNiveau" style="margin-left: 40px" class="btn btn-default">
            Volgende <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        siteView.initFunctionsKostenEnBaten();
        $("#baten").addClass("active");
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}