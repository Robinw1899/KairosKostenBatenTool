@model KairosWeb_Groep6.Models.KairosViewModels.Baten.MedewerkerNiveauBaatViewModel
@{
    var action = Model.Id == 0 ? "VoegToe" : "Bewerk";
    ViewData["action"] = Model.Id == 0 ? "Voeg toe" : "Opslaan";
}

<form asp-action="@action" id="form" style="display: none" method="post">

    <h6 class="col-md-offset-2 paddingtekst" id="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>

    <div asp-validation-summary="All" class="text-danger"></div>
    <!--3 hidden inputs om het id, soort en type op te slaan-->
    <input asp-for="Id" />
    <input asp-for="Type" />
    <input asp-for="Soort" />

    <div class="row col-md-offset-2">
        <div class="col-md-4 required">
            <label asp-for="Uren" class="control-label"></label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                </span>
                <input asp-for="Uren" class="form-control" placeholder="Uren" id="uren">
            </div>
            <!--<span asp-validation-for="Uren" class="text-danger"></span>-->
        </div>
        <div class="col-md-4 required">
            <label asp-for="BrutoMaandloonFulltime" class="control-label"></label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-eur" aria-hidden="true"></i>
                </span>
                <input asp-for="BrutoMaandloonFulltime" class="form-control"
                       placeholder="Bruto maandloon (fulltime)" id="brutoloon">
            </div>
            <!--<span asp-validation-for="BrutoMaandloonFulltime" class="text-danger"></span>-->
        </div>
    </div>
    <br />

    <div class="row col-md-offset-2">
        <div class="col-md-8 text-right">
            <a class="btn btn-default" onclick="siteView.verbergFormulier()">Annuleer</a>
            <button type="submit" class="btn btn-info" style="margin-left: 15px">@ViewData["action"]</button>
        </div>
    </div>
</form>

<script>
    if (siteView) {
        siteView.initFunctionsKostenEnBaten();
    }
</script>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }