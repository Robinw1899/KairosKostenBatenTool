@model KairosWeb_Groep6.Models.KairosViewModels.Kosten.OpleidingsKosten.OpleidingsKostIndexViewModel
@{
    ViewData["title"] = "Opleidingskost";
    var action = Model.Id == 0 ? "VoegToe" : "Bewerk";
    ViewData["action"] = Model.Id == 0 ? "Voeg toe" : "Opslaan";
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>Welke extra opleidingskosten zal de werkgever hebben om de nieuwe krachten op het gewenste niveau te krijgen?</p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model.ViewModels);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-success" id="openForm"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    <form asp-action="@action" id="form" style="display: none" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <!--3 hidden inputs om het id, soort en type op te slaan-->
        <input asp-for="Id" />
        <input asp-for="Type"/>
        <input asp-for="Soort"/>
        <div class="row col-md-offset-2">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-font" aria-hidden="true"></i><!--symbool moet nog veranderd worden!-->
                    </span>
                    <input asp-for="Beschrijving" class="form-control" placeholder="Beschrijving" id="beschrijving">
                </div>
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Bedrag" class="form-control"
                           placeholder="Geschatte bedrag" id="#Bedrag">
                </div>
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>

            <br />

            <div class="row col-md-offset-2">
                <div class="col-md-8 text-right">
                    <a class="btn btn-default" id="closeForm">Annuleer</a>
                    <button type="submit" class="btn btn-info" style="margin-left: 15px">@ViewData["action"]</button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="row" style="margin-top:20px">
    <div class="col-lg-9 col-md-8 col-sm-7 col-xs-7">
        <a asp-controller="Kosten" asp-action="GereedschapsKosten" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Gereedschaps kosten
        </a>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5 text-right">
        <a asp-controller="Kosten" asp-action="BegeleidingsKosten" style="margin-left: 35px" class="btn btn-success">
            Begeleidingskosten <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        if (@Model.ToonFormulier === 1) {
            toonFormulier();
        } else {
            $("#functie").val("");
            $("#beschrijving").val("");
            $("#Bedrag").val("");
        }

        $("#form").submit(function () {
            $.post(this.action,
                $(this).serialize(),
                function (data) {
                    $("#data").html(data);
                    $("#beschrijving").val("");
                    $("#Bedrag").val("");
                    //verbergFormulier();
                });

            return false;
        });

        $("#Kosten").addClass("active");
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
