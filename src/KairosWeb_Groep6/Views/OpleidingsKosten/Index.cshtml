@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<KairosWeb_Groep6.Models.KairosViewModels.Kosten.OpleidingsKostViewModel>
@{
    ViewData["title"] = Soort.OpleidingsKost.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.OpleidingsKost.GeefVraag()
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" id="add" asp-action="VoegToe"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    
    <div id="divForm">
        
    </div>
</div>
<div class="row" style="margin-top:20px">
    <div class="col-lg-9 col-md-8 col-sm-7 col-xs-7">
        <a asp-controller="Kosten" asp-action="GereedschapsKosten" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Vorige
        </a>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-5 col-xs-5 text-right">
        <a asp-controller="Kosten" asp-action="BegeleidingsKosten" style="margin-left: 35px" class="btn btn-default">
            Volgende <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        siteView.initFunctionsKostenEnBaten();
        $("#kosten").addClass("active");
    </script>
    
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
