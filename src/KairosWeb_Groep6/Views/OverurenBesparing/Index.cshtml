@using KairosWeb_Groep6.Models.Domain
@using KairosWeb_Groep6.Models.Domain.Extensions
@model KairosWeb_Groep6.Models.KairosViewModels.Baten.OverurenBesparingViewModel
@{
    ViewData["Title"] = Soort.OverurenBesparing.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Soort.OverurenBesparing.GeefVraag()
    </p>

    <div id="divForm">
        @Html.Partial("_Formulier", Model)
    </div>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-10 col-md-9">
        <a asp-controller="Baten" asp-action="ExtraProductiviteit" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Vorige
        </a>
    </div>
    <div class="col-xs-2 col-md-3 text-right">
        <a asp-controller="Baten" asp-action="ExterneInkopen" style="margin-left: 15px" class="btn btn-default">
            Volgende <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        $("#baten").addClass("active");
    </script>
    
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}