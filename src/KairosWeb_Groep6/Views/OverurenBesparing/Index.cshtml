@using KairosWeb_Groep6.Models.Domain.Extensions
@model KairosWeb_Groep6.Models.KairosViewModels.Baten.OverurenBesparingViewModel

@{
    ViewData["Title"] = Model.Soort.GeefOmschrijving();
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        @Model.Soort.GeefVraag()
    </p>

    <form asp-action="Opslaan" id="form" method="post">

        <h6 class="col-md-offset-2 paddingtekst" id="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>

        <div asp-validation-summary="All" class="text-danger"></div>
        <!--3 hidden inputs om het id, soort en type op te slaan-->
        <input asp-for="Id"/>
        <input asp-for="Type"/>
        <input asp-for="Soort"/>

        <div class="row col-md-offset-2 required">
            <div class="col-md-4">
                <label asp-for="Bedrag" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-euro" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Bedrag" class="form-control" placeholder="Jaarbedrag" id="bedrag">
                </div>
                <!--<span asp-validation-for="Bedrag" class="text-danger"></span>-->
            </div>
        </div>
        <br/>

        <div class="row col-md-offset-2">
            <div class="col-md-4 text-right">
                <a asp-controller="Baten" asp-action="Index" class="btn btn-default">Annuleer</a>
                @if (Model.Bedrag != 0)
                {
                    <a asp-controller="OverurenBesparing" asp-action="Verwijder" class="btn btn-danger" style="margin-left: 15px">Verwijder</a>
                }
                <button type="submit" class="btn btn-info" style="margin-left: 15px">Opslaan</button>
            </div>
        </div>
    </form>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-10 col-md-9">
        <a asp-controller="Baten" asp-action="ExtraProductiviteit" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Extra productiviteit
        </a>
    </div>
    <div class="col-xs-2 col-md-3 text-right">
        <a asp-controller="Baten" asp-action="ExterneInkopen" style="margin-left: 15px" class="btn btn-info">
            Externe inkopen <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        if (@Model.Bedrag <= 0) {
            $("#bedrag").val("");
        }

        $("#baten").addClass("active");
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}