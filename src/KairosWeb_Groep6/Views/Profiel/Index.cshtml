@using System.Threading.Tasks
@using KairosWeb_Groep6.Models.ProfielViewModels
@model ProfielViewModel

@{
    ViewData["title"] = "Profiel";
}

<div class="col-md-offset-1">
    <h2 class="">@ViewData["title"]</h2>

    <form asp-controller="Profiel" asp-action="Index" method="post" class="form-horizontal">
        <h6 class="col-md-offset-1" id="infoTekstVerplichteVelden">Velden aangeduid met een * zijn verplicht in te vullen</h6>
        <div class="">
            <div asp-validation-summary="All" class="text-danger"></div>

            <h4>Informatie jobcoach</h4>
            <hr />

            <input asp-for="GebruikerId" type="hidden" />

            <div class="row form-group">
                <div class="col-md-4">
                    <label asp-for="Naam"></label>
                    <input asp-for="Naam" class="form-control" />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Voornaam"></label>
                    <input asp-for="Voornaam" class="form-control" />
                    <span asp-validation-for="Voornaam" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-8">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <a asp-controller="Manage" asp-action="ChangePassword">Wijzig wachtwoord</a>
                </div>
            </div>
            <br />

            @if (Model.OrganisatieNaam != null)
            {
                <h4>Informatie organisatie</h4>
                <hr />
                <div class="row form-group">
                    <div class="col-md-8">
                        <label asp-for="OrganisatieNaam"></label>
                        <input asp-for="OrganisatieNaam" class="form-control" />
                        <span asp-validation-for="OrganisatieNaam" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label asp-for="StraatOrganisatie"></label>
                        <input asp-for="StraatOrganisatie" class="form-control" onfocus="geolocate()" id="route" />
                        <span asp-validation-for="StraatOrganisatie" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="NrOrganisatie"></label>
                        <input asp-for="NrOrganisatie" class="form-control" id="street_number" />
                        <span asp-validation-for="NrOrganisatie" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="BusOrganisatie"></label>
                        <input asp-for="BusOrganisatie" class="form-control" />
                        <span asp-validation-for="BusOrganisatie" class="text-danger"></span>
                    </div>
                </div>
                          
                <div class="row form-group">
                    <div class="col-md-2">
                        <label asp-for="Postcode"></label>
                        <input asp-for="Postcode" class="form-control" id="postal_code" />
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Gemeente"></label>
                        <input asp-for="Gemeente" class="form-control" id="locality" />
                        <span asp-validation-for="Gemeente" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 text-right">
                        <a asp-controller="Kairos" asp-action="Index" class="btn btn-default">Annuleer</a>
                        <button type="submit" class="btn btn-info" style="margin-left: 15px;">Opslaan</button>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0YY1oWU_ag0hCNWp-Tzn36DoEWVNJz-s&libraries=places&callback=initAutocomplete"
            async defer></script>

    <script src="/js/maps.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
