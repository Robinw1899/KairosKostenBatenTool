@model KairosWeb_Groep6.Models.KairosViewModels.Kosten.VoorbereidingsKostViewModels.VoorbereidingsKostIndexViewModel

@{
    ViewData["Title"] = "Voorbereidingskosten";
    var action = Model.Id == 0 ? "VoegToe" : "Bewerk";
    ViewData["action"] = Model.Id == 0 ? "Voeg toe" : "Opslaan";
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header">
        <h3>@ViewData["title"]</h3>
    </div>

    <p>
        Welke kosten moet de werkgever maken ter voorbereiding van de aanwerving
        (bv. ondersteuning bij de uitvoer van functiecreatie of jobcarving, administratie regelen, 
        uitzoeken welke aanpassingen nodig zijn, extra gesprekken met bemiddelingsdiensten, …)?
    </p>

    <div id="data">
        @{
            Html.RenderPartial("_OverzichtTabel", Model.ViewModels);
        }
    </div>

    <div class="addOption">
        <a class="btn btn-info" id="openForm"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>

    <form asp-action="@action" id="form" style="display: none" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <!--3 hidden inputs om het id, soort en type op te slaan-->

        <input asp-for="Id" />
        <input asp-for="Type" />
        <input asp-for="Soort" />

        <div class="row col-md-offset-2">
            <div class="col-md-4">
                <label asp-for="Beschrijving"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-font" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Beschrijving" class="form-control" placeholder="Type" id="beschrijving">
                </div>
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Bedrag"></label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-eur" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Bedrag" class="form-control"
                           placeholder="Bedrag" id="bedrag">
                </div>
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="row col-md-offset-2">
            <div class="col-md-8 text-right">
                <a class="btn btn-default" id="closeForm">Annuleer</a>
                <button type="submit" class="btn btn-info" style="margin-left: 15px">@ViewData["action"]</button>
            </div>
        </div>
    </form>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-8 col-md-9">
        <a asp-controller="Kosten" asp-action="EnclaveKosten" style="margin-left: 15px" class="btn btn-default">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> Kosten voor maatwerkbedrijf of enclave of onderaanneming
        </a>
    </div>
    <div class="col-xs-3 col-md-3 text-right">
        <a asp-controller="Kosten" asp-action="InfrastructuurKosten" style="margin-left: 30px" class="btn btn-info">
            Infrastructuurkosten <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
</div>

@section scripts{
    <script>
        if (@Model.ToonFormulier === 1) {
            siteView.toonFormulier();
        } else {
            $("#beschrijving").val("");
            $("#bedrag").val("");
        }

        $("#kosten").addClass("active");
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}