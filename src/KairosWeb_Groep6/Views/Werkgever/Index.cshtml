@model KairosWeb_Groep6.Models.KairosViewModels.WerkgeverViewModel
@{
    ViewData["Title"] = "Werkgever";
}

<div>
    <div>
        @Html.Partial("_Tabs")
    </div>

    <div class="page-header col-md-offset-2">
        <h3>@ViewData["Title"] - @Model.Naam</h3>
    </div>

    <form asp-controller="Werkgever" asp-action="Opslaan" method="post" class="form-horizontal">
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="WerkgeverId" />

            <div class="form-group">
                <label asp-for="Naam" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Naam" class="form-control input-maxwidth" />
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Departement" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Departement" class="form-control input-maxwidth" />
                    <span asp-validation-for="Departement" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Straat" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Straat" class="form-control input-maxwidth" onfocus="geolocate()" id="route" />
                    <span asp-validation-for="Straat" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Nummer" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Nummer" class="form-control input-maxwidth" id="street_number" />
                    <span asp-validation-for="Nummer" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Bus" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Bus" class="form-control input-maxwidth" id="street_number" />
                    <span asp-validation-for="Bus" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Postcode" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Postcode" class="form-control input-maxwidth" id="postal_code" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Gemeente" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Gemeente" class="form-control input-maxwidth" id="locality" />
                    <span asp-validation-for="Gemeente" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AantalWerkuren" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="AantalWerkuren" class="form-control input-maxwidth" />
                    <span asp-validation-for="AantalWerkuren" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PatronaleBijdrage" class="col-md-offset-2 col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="PatronaleBijdrage" class="form-control input-maxwidth" />
                    <span asp-validation-for="PatronaleBijdrage" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group col-md-12">
                    <div class="col-md-7 text-right" style="margin-left: 40px;">
                        <button class="btn btn-info" type="submit">Opslaan</button>
                    </div>
                </div>
            </div>
        </div>
    </form>    
    <div class="row">
        <div class="col-xs-11 col-md-11 text-right">
            <a asp-controller="Kosten" asp-action="Index" style="margin-left: 15px" class="btn btn-success">
                Kosten <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#werkgever").addClass("active");
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0YY1oWU_ag0hCNWp-Tzn36DoEWVNJz-s&libraries=places&callback=initAutocomplete"
            async defer></script>

    <script src="/js/maps.js"></script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}